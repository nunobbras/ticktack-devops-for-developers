#FROM ubuntu:14.04 - em testes
FROM phusion/baseimage:0.9.17
MAINTAINER Nuno B Bras <nuno.bras@2ndhanlder.com>

RUN echo "reload"
RUN sudo apt-get update

RUN apt-get install -y tar \
                   git \
                   git-core\
                   curl \
                   nano \
                   wget \
                   dialog \
                   net-tools \ 
                   htop \
                   apache2-utils
                   
RUN apt-get install -y software-properties-common
RUN add-apt-repository ppa:nginx/stable
RUN apt-get update

# Install Nginx.
RUN apt-get install -y nginx=1.8.0-1+trusty1

RUN rm -rf /var/lib/apt/lists/* 
  #chown -R www-data:www-data /var/lib/nginx

RUN echo "reload"
RUN rm /etc/nginx/sites-enabled/default
ADD nginx/sites-enabled/ /etc/nginx/sites-enabled

RUN rm /etc/nginx/nginx.conf
ADD nginx/nginx_conf/nginx.conf /etc/nginx/nginx.conf

ADD nginx/nginx_conf/pass.txt /etc/nginx/pass.txt


# Define working directory.
#WORKDIR /etc/nginx


# Define default command.
#CMD ["service nginx start"]
